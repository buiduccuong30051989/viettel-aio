include _common

mixin homeSlider
  .home-slider.js-home-slider
    .container
      .row
        .slider-inner
          .side-cat
            +catMenu('cat-menu')
          .side-slider
            .js-home-carousel.owl-carousel.owl-theme
              .item(data-color='#000')
                img(src='https://picsum.photos/940/300?random=1', alt='demo')
              .item(data-color='#00918e')
                img(src='https://picsum.photos/940/300?random=2', alt='demo')
              .item(data-color='#f78624')
                img(src='https://picsum.photos/940/300?random=3', alt='demo')
              .item(data-color='#132726')
                img(src='https://picsum.photos/940/300?random=4', alt='demo')
              .item(data-color='#737c7c')
                img(src='https://picsum.photos/940/300?random=5', alt='demo')
              .item(data-color='#aab6b6')
                img(src='https://picsum.photos/940/300?random=6', alt='demo')
            .slider_nav
              button.js-home-slider-prev.circle-arrow-carousel.prev
                span.ic-prev
              button.js-home-slider-next.circle-arrow-carousel.next
                span.ic-next